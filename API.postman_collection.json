        {
          "name": "Verify Code",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/api/v1/auth/verify-code",
              "host": ["{{baseUrl}}"],
              "path": ["auth","api","v1","auth","verify-code"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@example.com\",\n  \"code\": \"123456\"\n}",
              "options": {"raw": {"language": "json"}}
            },
            "description": "ПУБЛИЧНЫЙ (JWT не требуется). Подтверждение кода. Ответ: { userId, accessToken, refreshToken }."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "try { const json = pm.response.json(); if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken); if (json.refreshToken) pm.collectionVariables.set('refreshToken', json.refreshToken); } catch(e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
